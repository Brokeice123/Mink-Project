<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomePageActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/welcome"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="Welcome To Mink !"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/statement"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/actor"
        android:text="Connect, discover, and chat with new people. Start now!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />


        <TextView
            android:id="@+id/BtnSignIn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="500dp"
            android:background="@drawable/left_button_background"
            android:text="Sign In"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/BtnSignUp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="580dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/right_button_background"
            android:text="Sign Up"
            android:textColor="#1F3C87"
            android:textStyle="bold"
            android:gravity="center" />

</RelativeLayout>