<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/btn_back_signup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/signup_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/signup"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:fontFamily="cursive"
        android:text="SignUp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/average"
        android:text="Create Your Account"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded"
        />


    <EditText
        android:id="@+id/edtRegname"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="30dp"
        android:autofillHints="Keith Markomen"
        android:ems="10"
        android:hint="Enter your full name"
        android:textColor="#000000"
        android:inputType="text"
        android:paddingStart="20dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        />


    <EditText
        android:id="@+id/edtRegemail"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Enter your Email"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        />

    <EditText
        android:id="@+id/edtRegphone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Enter your Phone Number"
        android:textColor="#000000"
        android:inputType="phone"
        android:paddingStart="20dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        />

    <EditText
        android:id="@+id/edtRegpassword"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Enter your Password"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        />

    <TextView
        android:id="@+id/btnRegcreate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:background="@drawable/signup_btn"
        android:text="Sign Up"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:ignore="HardcodedText,RtlHardcoded"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:fontFamily="@font/average"
        android:text="or sign up with"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded"
        />


</RelativeLayout>